{{!
    @template mod_videoassessment/section_options

    Template for course section selection dropdown options.

    Classes required for JS:
    * none

    Context variables required for this template:
    * sections - array of section objects with id, name, and selected properties

    Example context (json):
    {
        "sections": [
            {"id": "1", "name": "Section 1", "selected": false},
            {"id": "2", "name": "Section 2", "selected": true}
        ]
    }
}}

{{#sections}}
    <option value="{{id}}"{{#selected}} selected{{/selected}}>
        {{name}}
    </option>
{{/sections}}